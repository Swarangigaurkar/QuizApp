<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
   >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="129dp"
    android:background="@drawable/background"
    android:id="@+id/ll1"
    android:orientation="vertical"
    >
</LinearLayout>
    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview1"
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="50dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="5sp"
        app:cardCornerRadius="5sp"
        app:cardBackgroundColor="@color/cardview_light_background"

        >

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="220dp"
            android:padding="8dp">

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginTop="10dp"
                android:text="Java"
                android:textSize="35dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#000000"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="start"
                android:text="Total Question: 10"
                android:textColor="#000000"
                android:layout_below="@+id/textViewTitle"

                />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:id="@+id/tv1"
        android:text="Number of Questions"
        android:layout_below="@id/cardview1"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:layout_below="@id/tv1"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="1"
        android:textColor="#000000"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_centerInParent="true"

        />
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:max="15"
        android:layout_below="@id/tv2"
        android:layout_marginTop="30dp"
        android:id="@+id/sb1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        />
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="30dp"
    android:id="@+id/cardsHighscore"
    android:layout_below="@+id/sb1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#FFFFFF"
    app:cardUseCompatPadding="true"
    app:cardElevation="5sp"
    app:cardCornerRadius="5sp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    >

    <TextView
        android:id="@+id/textview_highscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="HighScore : 0"
        android:textColor="@android:color/black"
        android:textSize="30dp"

        />
</android.support.v7.widget.CardView>


    <android.support.design.widget.FloatingActionButton
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/StartActivityFAB"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/cardsHighscore"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="250dp"
        android:src="@drawable/done"
        app:elevation="6dp"
        app:fabSize="normal"
        app:backgroundTint="#0072BC"
        />
    <android.support.design.widget.FloatingActionButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/StartActivityFAB2"
        android:layout_below="@id/cardsHighscore"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="80dp"
        android:elevation="6dp"
        android:src="@drawable/cross"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:backgroundTint="#FF6347"

        />



</RelativeLayout>