<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
   <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="100dp"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       app:cardCornerRadius="5dp"
       app:cardBackgroundColor="#F0F8FF"
       android:layout_marginTop="30dp"
       android:id="@+id/cards"
       >
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Your Profile"
           android:textSize="30dp"
           android:layout_centerInParent="true"
           android:gravity="center"
           android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
           />


       </RelativeLayout>
   </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="30dp"
        android:id="@+id/cards1"
        android:layout_below="@id/cards"
        android:layout_centerInParent="true"
        android:padding="5sp"
        app:cardElevation="8dp"
        >

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_person_black_24dp"
        android:layout_centerInParent="true"
        android:elevation="10dp"
        android:id="@+id/propic"
        android:layout_margin="5dp"
        />
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/cards1"
        android:layout_marginTop="30dp"
        android:text="Name: Swarangi Gaurkar"
        android:textSize="30dp"
        android:gravity="center"
        android:elevation="5sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/nametv"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/nametv"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="Email: swarangi.1320@gmail.com"
        android:textSize="25dp"
        android:gravity="center"
        android:id="@+id/emailtv"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/emailtv"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="Test: JAVA  Score: 5"
        android:textSize="25dp"
        android:gravity="center"
        android:id="@+id/scoretv"
        />



</RelativeLayout>